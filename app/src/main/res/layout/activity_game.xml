<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asi.tictactoe.GameActivity"
    android:orientation="vertical"
    android:background="@drawable/board_background"
    >


    //For the names of the players
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/player_one_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1">
        </TextView>

        <TextView
            android:id="@+id/vs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="vs"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_weight="1">

        </TextView>
        <TextView
            android:id="@+id/player_two_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1">
        </TextView>

    </LinearLayout>


    //For the game board
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b00"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b01"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" /> />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b02"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b03"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" />/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b04"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" /> />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b05"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b06"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b07"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3"/>

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="100sp"
            android:background="@drawable/b08"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-3dp"
            android:layout_marginTop="-4dp"
            android:weightSum="3"/>

    </LinearLayout>

    <LinearLayout

        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/player1ScoreTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:fontFamily="casual"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_light"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/playerTurnTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textSize="20dp"
            android:background="@android:color/holo_orange_light"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/player2ScoreTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="casual"
            android:textSize="20dp"
            android:background="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/moreRoundBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="New Round"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>



</LinearLayout>
